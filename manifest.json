{
  "manifest_version": 3,
  "name": "TabGrouper",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "tabGroups",
    "bookmarks"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-search-box": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Open the search box"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
